@page
@model InternerShop.Pages.Cart.AddToCartModel
@{
    ViewData["Title"] = "Добавить в корзину";
}

<div class="container">
    @if (Model.Success)
    {
        <div class="alert alert-success text-center">
            <h4>Товар добавлен в корзину!</h4>
            <p>@Model.ProductName успешно добавлен в вашу корзину.</p>
            <div class="mt-3">
                <a href="/Cart" class="btn btn-primary">Перейти в корзину</a>
                <a href="/Catalog" class="btn btn-outline-secondary">Продолжить покупки</a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger text-center">
            <h4>Ошибка!</h4>
            <p>@Model.ErrorMessage</p>
            <div class="mt-3">
                <a href="/Catalog" class="btn btn-primary">Вернуться в каталог</a>
            </div>
        </div>
    }
</div>
