<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Админ-панель</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Index">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Панель управления
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Products/Index">
                                <i class="fas fa-box me-2"></i>
                                Товары
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Orders/Index">
                                <i class="fas fa-shopping-cart me-2"></i>
                                Заказы
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/News/Index">
                                <i class="fas fa-newspaper me-2"></i>
                                Новости
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Users/Index">
                                <i class="fas fa-users me-2"></i>
                                Пользователи
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin/Discounts/Index">
                                <i class="fas fa-tag me-2"></i>
                                Скидки
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Index">
                                <i class="fas fa-home me-2"></i>
                                На сайт
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <!-- Сообщения об ошибках и успехах -->
                <partial name="_ErrorAlert" />

                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <span class="text-muted me-3">Администратор</span>
                        <a href="/Identity/Account/Logout" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-sign-out-alt me-1"></i>Выйти
                        </a>
                    </div>
                </div>

                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>