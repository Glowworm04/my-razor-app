@page
@model InternerShop.Pages.Admin.Discounts.IndexModel
@{
    ViewData["Title"] = "Управление скидками";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Скидки</h2>
    <a asp-page="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Добавить скидку
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Процент</th>
                        <th>Период действия</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var discount in Model.Discounts)
                    {
                        <tr>
                            <td>
                                <strong>@discount.Name</strong>
                                @if (!string.IsNullOrEmpty(discount.Description))
                                {
                                    <br>
                                    <small class="text-muted">@discount.Description</small>
                                }
                            </td>
                            <td>
                                <span class="badge bg-success">@discount.DiscountPercentage%</span>
                            </td>
                            <td>
                                <small>
                                    @discount.StartDate.ToString("dd.MM.yyyy") - @discount.EndDate.ToString("dd.MM.yyyy")
                                </small>
                            </td>
                            <td>
                                @if (discount.IsActive && discount.EndDate >= DateTime.Today)
                                {
                                    <span class="badge bg-success">Активна</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Неактивна</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="Edit" asp-route-id="@discount.DiscountId" class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@discount.DiscountId"
                                          onsubmit="return confirm('Удалить эту скидку?');">
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>