@page
@model InternerShop.Pages.Admin.Discounts.EditModel
@{
    ViewData["Title"] = "Редактировать скидку";
    Layout = "_AdminLayout";
}

<h2>Редактировать скидку</h2>

<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data" id="editForm">
            <input type="hidden" asp-for="DiscountEdit.DiscountId" />

            <div class="card">
                <div class="card-body">
                    <!-- Отображение ошибок валидации -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Текущее изображение -->
                    @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
                    {
                        <div class="mb-3">
                            <label class="form-label">Текущее изображение</label>
                            <div>
                                <img src="@Model.CurrentImageUrl" alt="Current Image"
                                     style="max-width: 200px; max-height: 150px; object-fit: cover;" class="rounded border">
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Новое изображение</label>
                        <input type="file" class="form-control" asp-for="DiscountImage" accept="image/*" />
                        <small class="form-text text-muted">Оставьте пустым, чтобы сохранить текущее изображение</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiscountEdit.Name" class="form-label">Название скидки *</label>
                        <input asp-for="DiscountEdit.Name" class="form-control" />
                        <span asp-validation-for="DiscountEdit.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiscountEdit.Description" class="form-label">Описание</label>
                        <textarea asp-for="DiscountEdit.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="DiscountEdit.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiscountEdit.DiscountPercentage" class="form-label">Процент скидки *</label>
                        <input asp-for="DiscountEdit.DiscountPercentage" class="form-control" type="number" step="0.01" min="0.01" max="100" />
                        <span asp-validation-for="DiscountEdit.DiscountPercentage" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DiscountEdit.StartDate" class="form-label">Дата начала *</label>
                            <input asp-for="DiscountEdit.StartDate" class="form-control" type="date" />
                            <span asp-validation-for="DiscountEdit.StartDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DiscountEdit.EndDate" class="form-label">Дата окончания *</label>
                            <input asp-for="DiscountEdit.EndDate" class="form-control" type="date" />
                            <span asp-validation-for="DiscountEdit.EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="DiscountEdit.IsActive" />
                        <label class="form-check-label" asp-for="DiscountEdit.IsActive">
                            Активная скидка
                        </label>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>Сохранить изменения
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Отмена
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
