@page
@model InternerShop.Pages.Admin.Discounts.CreateModel
@{
    ViewData["Title"] = "Добавить скидку";
    Layout = "_AdminLayout";
}

<h2>Добавить скидку</h2>

<div class="row">
    <div class="col-md-8">
        <form method="post" id="createForm">
            <div class="card">
                <div class="card-body">
                    <!-- Отображение ошибок валидации -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="DiscountCreate.Name" class="form-label">Название скидки *</label>
                        <input asp-for="DiscountCreate.Name" class="form-control" />
                        <span asp-validation-for="DiscountCreate.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiscountCreate.Description" class="form-label">Описание</label>
                        <textarea asp-for="DiscountCreate.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="DiscountCreate.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiscountCreate.DiscountPercentage" class="form-label">Процент скидки *</label>
                        <input asp-for="DiscountCreate.DiscountPercentage" class="form-control" type="number" step="0.01" min="0.01" max="100" />
                        <span asp-validation-for="DiscountCreate.DiscountPercentage" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DiscountCreate.StartDate" class="form-label">Дата начала *</label>
                            <input asp-for="DiscountCreate.StartDate" class="form-control" type="date" />
                            <span asp-validation-for="DiscountCreate.StartDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DiscountCreate.EndDate" class="form-label">Дата окончания *</label>
                            <input asp-for="DiscountCreate.EndDate" class="form-control" type="date" />
                            <span asp-validation-for="DiscountCreate.EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="DiscountCreate.IsActive" checked />
                        <label class="form-check-label" asp-for="DiscountCreate.IsActive">
                            Активная скидка
                        </label>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Создать скидку
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Отмена
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Устанавливаем минимальную дату для окончания как дату начала
        document.getElementById('DiscountCreate_StartDate').addEventListener('change', function() {
            const endDateInput = document.getElementById('DiscountCreate_EndDate');
            endDateInput.min = this.value;

            // Если дата окончания раньше даты начала, обновляем ее
            if (endDateInput.value < this.value) {
                endDateInput.value = this.value;
            }
        });

        // Инициализация при загрузке
        document.addEventListener('DOMContentLoaded', function() {
            const startDateInput = document.getElementById('DiscountCreate_StartDate');
            const endDateInput = document.getElementById('DiscountCreate_EndDate');

            if (startDateInput.value) {
                endDateInput.min = startDateInput.value;
            }
        });
    </script>
}
