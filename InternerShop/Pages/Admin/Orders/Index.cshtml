@page
@model InternerShop.Pages.Admin.Orders.IndexModel
@{
    ViewData["Title"] = "Управление заказами";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Заказы</h2>
</div>

<!-- Фильтры -->
<form method="get" class="row mb-4">
    <div class="col-md-3">
        <select class="form-control" asp-for="StatusFilter">
            <option value="">Все статусы</option>
            <option value="Pending">Ожидающие</option>
            <option value="Processing">В обработке</option>
            <option value="Shipped">Отправленные</option>
            <option value="Delivered">Доставленные</option>
            <option value="Cancelled">Отмененные</option>
        </select>
    </div>
    <div class="col-md-3">
        <input type="date" class="form-control" asp-for="DateFrom" />
    </div>
    <div class="col-md-3">
        <input type="date" class="form-control" asp-for="DateTo" />
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-outline-primary w-100">Применить</button>
    </div>
</form>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Клиент</th>
                        <th>Дата</th>
                        <th>Сумма</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>#@order.OrderId</td>
                            <td>
                                <div>@order.User.FirstName @order.User.LastName</div>
                                <small class="text-muted">@order.User.Email</small>
                            </td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@order.TotalAmount.ToString("C")</td>
                            <td>
                                <span class="badge bg-@Model.GetStatusBadgeClass(order.OrderStatus)">
                                    @order.OrderStatus
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="Details" asp-route-id="@order.OrderId"
                                       class="btn btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-page="Edit" asp-route-id="@order.OrderId"
                                       class="btn btn-outline-info">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Пагинация -->
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           href="?currentPage=@i&statusFilter=@Model.StatusFilter&dateFrom=@Model.DateFrom?.ToString("yyyy-MM-dd")&dateTo=@Model.DateTo?.ToString("yyyy-MM-dd")">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>