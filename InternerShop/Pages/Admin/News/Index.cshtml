@page
@model InternerShop.Pages.Admin.News.IndexModel
@{
    ViewData["Title"] = "Управление новостями";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Новости</h2>
    <a asp-page="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Добавить новость
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Заголовок</th>
                        <th>Автор</th>
                        <th>Дата публикации</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var news in Model.NewsList)
                    {
                        <tr>
                            <td>
                                <strong>@news.Title</strong>
                                <br>
                                <small class="text-muted">@news.Content.Substring(0, Math.Min(100, news.Content.Length))...</small>
                            </td>
                            <td>@news.Author.FirstName @news.Author.LastName</td>
                            <td>@news.PublishedDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (news.IsPublished)
                                {
                                    <span class="badge bg-success">Опубликована</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Черновик</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="Edit" asp-route-id="@news.NewsId"
                                       class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" asp-page-handler="TogglePublish"
                                          asp-route-id="@news.NewsId"
                                          onsubmit="return confirm('@(news.IsPublished ? "Снять с публикации?" : "Опубликовать?")');">
                                        <button type="submit" class="btn btn-outline-@(news.IsPublished ? "warning" : "success")">
                                            <i class="fas fa-@(news.IsPublished ? "eye-slash" : "eye")"></i>
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="Delete"
                                          asp-route-id="@news.NewsId"
                                          onsubmit="return confirm('Удалить эту новость?');">
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>