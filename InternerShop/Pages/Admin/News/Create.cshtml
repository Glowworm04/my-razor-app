@page
@model InternerShop.Pages.Admin.News.CreateModel
@{
    ViewData["Title"] = "Добавить новость";
    Layout = "_AdminLayout";
}

<h2>Добавить новость</h2>

<div class="row">
    <div class="col-md-8">
        <form method="post" id="createForm">
            <div class="card">
                <div class="card-body">
                    <!-- Отображение ошибок валидации -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="NewsCreate.Title" class="form-label">Заголовок *</label>
                        <input asp-for="NewsCreate.Title" class="form-control" />
                        <span asp-validation-for="NewsCreate.Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewsCreate.Content" class="form-label">Содержание *</label>
                        <textarea asp-for="NewsCreate.Content" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="NewsCreate.Content" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewsCreate.ImageUrl" class="form-label">URL изображения</label>
                        <input asp-for="NewsCreate.ImageUrl" class="form-control" />
                        <span asp-validation-for="NewsCreate.ImageUrl" class="text-danger"></span>
                        <small class="form-text text-muted">Необязательное поле. Введите полный URL изображения.</small>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="NewsCreate.IsPublished" />
                        <label class="form-check-label" asp-for="NewsCreate.IsPublished">
                            Опубликовать сразу
                        </label>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Создать новость
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Отмена
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}