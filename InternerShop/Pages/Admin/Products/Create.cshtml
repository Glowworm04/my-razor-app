@page
@model InternerShop.Pages.Admin.Products.CreateModel
@{
    ViewData["Title"] = "Добавить товар";
    Layout = "_AdminLayout";
}

<h2>Добавить новый товар</h2>

<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data" id="createForm">
            <div class="card">
                <div class="card-body">
                    <!-- Отображение ошибок валидации -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="ProductCreate.Name" class="form-label">Название товара *</label>
                        <input asp-for="ProductCreate.Name" class="form-control" />
                        <span asp-validation-for="ProductCreate.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProductCreate.Description" class="form-label">Описание</label>
                        <textarea asp-for="ProductCreate.Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="ProductCreate.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProductCreate.Price" class="form-label">Цена *</label>
                            <input asp-for="ProductCreate.Price" class="form-control" type="number" step="0.01" min="0.01" />
                            <span asp-validation-for="ProductCreate.Price" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ProductCreate.StockQuantity" class="form-label">Количество на складе *</label>
                            <input asp-for="ProductCreate.StockQuantity" class="form-control" type="number" min="0" />
                            <span asp-validation-for="ProductCreate.StockQuantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProductCreate.CategoryId" class="form-label">Категория *</label>
                            <select asp-for="ProductCreate.CategoryId" asp-items="Model.Categories" class="form-control">
                                <option value="">-- Выберите категорию --</option>
                            </select>
                            <span asp-validation-for="ProductCreate.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Статус</label>
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" asp-for="ProductCreate.IsActive" checked />
                                <label class="form-check-label" asp-for="ProductCreate.IsActive">
                                    Активный товар
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Изображения товара</label>
                        <input type="file" class="form-control"
                               asp-for="ProductImages"
                               multiple
                               accept="image/*" />
                        <small class="form-text text-muted">Можно выбрать несколько изображений. Первое изображение будет основным.</small>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Создать товар
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Отмена
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById('createForm').addEventListener('submit', function(e) {
            // Валидация категории
            const categorySelect = document.querySelector('#ProductCreate_CategoryId');
            if (!categorySelect.value) {
                alert('Пожалуйста, выберите категорию');
                e.preventDefault();
                return;
            }

            // Показываем loading state
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Создание...';
            submitBtn.disabled = true;
        });
    </script>
}
