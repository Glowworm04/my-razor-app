@page
@model InternerShop.Pages.Admin.Products.EditModel
@{
    ViewData["Title"] = "Редактировать товар";
    Layout = "_AdminLayout";
}

<h2>Редактировать товар</h2>

<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data" id="editForm">
            <input type="hidden" asp-for="ProductEdit.ProductId" />

            <div class="card">
                <div class="card-body">
                    <!-- Отображение ошибок валидации -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="ProductEdit.Name" class="form-label">Название товара *</label>
                        <input asp-for="ProductEdit.Name" class="form-control" />
                        <span asp-validation-for="ProductEdit.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProductEdit.Description" class="form-label">Описание</label>
                        <textarea asp-for="ProductEdit.Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="ProductEdit.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProductEdit.Price" class="form-label">Цена *</label>
                            <input asp-for="ProductEdit.Price" class="form-control" type="number" step="0.01" min="0.01" />
                            <span asp-validation-for="ProductEdit.Price" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ProductEdit.StockQuantity" class="form-label">Количество на складе *</label>
                            <input asp-for="ProductEdit.StockQuantity" class="form-control" type="number" min="0" />
                            <span asp-validation-for="ProductEdit.StockQuantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProductEdit.CategoryId" class="form-label">Категория *</label>
                            <select asp-for="ProductEdit.CategoryId" asp-items="Model.Categories" class="form-control">
                                <option value="">-- Выберите категорию --</option>
                            </select>
                            <span asp-validation-for="ProductEdit.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Статус</label>
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" asp-for="ProductEdit.IsActive" />
                                <label class="form-check-label" asp-for="ProductEdit.IsActive">
                                    Активный товар
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Существующие изображения -->
                    @if (Model.ExistingImages.Any())
                    {
                        <div class="mb-3">
                            <label class="form-label">Текущие изображения</label>
                            <div class="row">
                                @foreach (var image in Model.ExistingImages)
                                {
                                    <div class="col-md-3 mb-2">
                                        <div class="card">
                                            <img src="@image.ImageUrl" class="card-img-top"
                                                 alt="@image.AltText" style="height: 100px; object-fit: cover;">
                                            <div class="card-body text-center">
                                                @if (image.IsPrimary)
                                                {
                                                    <span class="badge bg-primary mb-2">Основное</span>
                                                }
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="DeleteImages" value="@image.ProductImageId" />
                                                    <label class="form-check-label small">Удалить</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Добавить изображения</label>
                        <input type="file" class="form-control"
                               name="NewProductImages"
                               multiple
                               accept="image/*" />
                        <small class="form-text text-muted">Можно выбрать несколько изображений (JPG, PNG, GIF, до 5MB)</small>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>Сохранить изменения
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Отмена
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}