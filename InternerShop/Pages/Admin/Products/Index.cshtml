@page
@model InternerShop.Pages.Admin.Products.IndexModel
@{
    ViewData["Title"] = "Управление товарами";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Товары</h2>
    <a asp-page="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Добавить товар
    </a>
</div>

<!-- Фильтры и поиск -->
<form method="get" class="row mb-4">
    <div class="col-md-4">
        <input type="text" class="form-control" placeholder="Поиск по названию..." asp-for="SearchString" />
    </div>
    <div class="col-md-3">
        <select class="form-control" asp-for="CategoryId" asp-items="Model.Categories">
            <option value="">Все категории</option>
        </select>
    </div>
    <div class="col-md-3">
        <select class="form-control" asp-for="Status">
            <option value="">Все статусы</option>
            <option value="active">Активные</option>
            <option value="inactive">Неактивные</option>
            <option value="lowstock">Мало на складе</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-outline-primary w-100">Поиск</button>
    </div>
</form>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Изображение</th>
                        <th>Название</th>
                        <th>Категория</th>
                        <th>Цена</th>
                        <th>На складе</th>
                        <th>Статус</th>
                        <th>Дата создания</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>
                                @if (product.ProductImages.Any())
                                {
                                    <img src="@product.ProductImages.First().ImageUrl"
                                         alt="Image"
                                         style="width: 50px; height: 50px; object-fit: cover;"
                                         class="rounded">
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                         style="width: 50px; height: 50px;">
                                        <i class="fas fa-image text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Category.Name</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>
                                <span class="@(product.StockQuantity < 10 ? "text-danger fw-bold" : "")">
                                    @product.StockQuantity
                                </span>
                            </td>
                            <td>
                                @if (product.IsActive)
                                {
                                    <span class="badge bg-success">Активен</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Неактивен</span>
                                }
                            </td>
                            <td>@product.CreatedDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="Edit" asp-route-id="@product.ProductId"
                                       class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-page="Details" asp-route-id="@product.ProductId"
                                       class="btn btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete"
                                          asp-route-id="@product.ProductId"
                                          onsubmit="return confirm('Удалить этот товар?');">
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Пагинация -->
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           href="?currentPage=@i&searchString=@Model.SearchString&categoryId=@Model.CategoryId&status=@Model.Status">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
